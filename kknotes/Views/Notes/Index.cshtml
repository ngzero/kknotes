@model IList<kknotes.Dto.NoteDto>

<form asp-action="Edit" method="post">
    <button class="btn btn-primary">Create new note</button>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Note</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr>
                <td>@note.Id</td>
                <td>@note.Content</td>
                <td>
                    <div class="row">
                        <form asp-action="Edit" method="post" asp-route-id="@note.Id"><button class="btn btn-warning">Edit</button></form>
                        <form asp-action="Delete" method="post" asp-route-id="@note.Id"><button class="btn btn-danger">Delete</button></form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>